<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#2d2d2d">
    <Button
            android:text="進入遊戲"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="wrap_content"
            android:id="@+id/btn_entry2" android:textSize="14sp"
            android:textColor="#F5F5F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name2" app:layout_constraintEnd_toStartOf="@+id/img_bath2"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="180dp"
            android:background="@drawable/ic_hollow_shape"
            android:layout_height="120dp" app:srcCompat="@drawable/fish"
            android:id="@+id/img_bath2" android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img_bath1"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/img_bath1"/>
    <Button
            android:text="進入遊戲"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="wrap_content"
            android:id="@+id/btn_entry1" android:textSize="14sp"
            android:textColor="#F5F5F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name1" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/img_bath1" android:layout_marginRight="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/ic_solid_shape"
            android:id="@+id/ed_user" android:hint="輸入玩家姓名" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="95dp" android:layout_marginStart="95dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="103dp" android:layout_marginRight="103dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="頂尖對決"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name1" android:textSize="24sp"
            android:textColor="#a39e9e"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/img_bath1" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/img_bath1" android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="180dp"
            android:background="@drawable/ic_hollow_shape"
            android:layout_height="120dp" app:srcCompat="@drawable/bombing"
            android:id="@+id/img_bath1" android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_user"/>
    <Button
            android:text="進入遊戲"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="wrap_content"
            android:id="@+id/btn_entry3" android:textSize="14sp"
            android:textColor="#F5F5F5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name3" app:layout_constraintEnd_toStartOf="@+id/img_bath3"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>
    <TextView
            android:text="激海釣魂"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#a39e9e" android:id="@+id/tv_name2"
            app:layout_constraintTop_toTopOf="@+id/img_bath2"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/img_bath2"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>
    <TextView
            android:text="格鬥天王"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:textColor="#a39e9e"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name3"
            app:layout_constraintTop_toTopOf="@+id/img_bath3"
            android:layout_marginTop="16dp" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/img_bath3" android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="180dp"
            android:background="@drawable/ic_hollow_shape"
            android:layout_height="120dp" app:srcCompat="@drawable/fight"
            android:id="@+id/img_bath3" android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img_bath2"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/img_bath2"/>

</androidx.constraintlayout.widget.ConstraintLayout>

